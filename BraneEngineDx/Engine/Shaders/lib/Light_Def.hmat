#include "Bindings_Def.hmat"

struct PointLight
{
    float3 pos;
    float intensity;
    float3 color;
    float attenuation;
};

struct DirectLight
{
    float3 direction;
    float intensity;
    float4x4 lmat;
    float3 color;
};

tbuffer DirectLightBuffer : register(DIRECT_LIGHT_BIND_INDEX)
{
    DirectLight directLight;
    uint pointLightCount;
};

StructuredBuffer<PointLight> pointLights : register(POINT_LIGHT_BIND_INDEX);