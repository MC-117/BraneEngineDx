#include "../lib/Bindings_Def.hmat"

struct Particle
{
    float3 pos;
    float lifetime;
    float3 scale;
    float maxLifetime;
    float3 velocity;
    float type;
    float3 acceleration;
    float extSca;
    float4 extVec;
    float4 color;
};

layout (std430, binding = PARTICLE_BIND_INDEX) buffer ParticleBuffer
{
    Particle Particles[];
};